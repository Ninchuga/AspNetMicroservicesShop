@page
@model Shopping.Razor.Pages.Orders.OrderDetailsModel
@{
    ViewData["Title"] = "Order Details";
}

<section class="h-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-10 col-xl-8">
                <div class="card" style="border-radius: 10px;">
                    <div class="card-header px-4 py-5">
                        <h5 class="text-muted mb-0">Details of your order #@Model.Order.OrderId</h5>
                    </div>
                    <div class="card-body p-4">
                        @foreach (var item in Model.Order.OrderItems)
                        {
                            <div class="card shadow-0 border mb-4">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <img src="https://mdbcdn.b-cdn.net/img/Photos/Horizontal/E-commerce/Products/13.webp" class="img-fluid" alt="Phone">
                                        </div>
                                        <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0">@item.ProductName</p>
                                        </div>
                                        <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">$@item.Price.ToString("N2")</p>
                                        </div>
                                        <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">Qty: @item.Quantity</p>
                                        </div>
                                        <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">Discount @item.Discount</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                        <div class="row d-flex align-items-center">
                            <div class="col-md-3">
                                <p class="text-muted mb-0 font-weight-bold">Order status</p>
                            </div>
                            <div class="col-md-9">
                                <div class="progress" style="height: 6px; border-radius: 16px;">
                                    <div class="progress-bar"
                                         role="progressbar"
                                         style="width: 65%; border-radius: 16px; background-color: #a8729a;"
                                         aria-valuenow="65"
                                         aria-valuemin="0"
                                         aria-valuemax="100"></div>
                                </div>
                                <div class="d-flex justify-content-around mb-1">
                                    <p class="text-muted mt-1 mb-0 small ms-xl-10">@Model.Order.OrderStatus</p>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="d-flex justify-content-between pt-2">
                            <p class="font-weight-bold mb-0">Order Details</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="text-muted mb-0">Ordered on: @Model.Order.OrderDate</p>
                            <p class="text-muted mb-0"><span class="font-weight-bold me-4">Total</span> $@Model.Order.TotalPrice.ToString("N2")</p>
                        </div>
                        <br />
                        <div class="d-flex justify-content-between pt-2">
                            <p class="font-weight-bold mb-0">Delivery Address</p>
                        </div>
                        <div class="d-flex justify-content-between pt-2">
                            <p class="text-muted mb-0">@Model.Order.FirstName @Model.Order.LastName</p>
                        </div>
                        <div class="d-flex justify-content-between pt-2">
                            <p class="text-muted mb-0">@Model.Order.Street</p>
                        </div>
                        <div class="d-flex justify-content-between pt-2">
                            <p class="text-muted mb-0">@Model.Order.City</p>
                        </div>
                        <div class="d-flex justify-content-between pt-2">
                            <p class="text-muted mb-0">@Model.Order.Country</p>
                        </div>
                    </div>
                    <div class="card-footer border-0 px-4 py-5" style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                        <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total paid: <span class="h3 mb-0 ms-2"> $@Model.Order.TotalPrice.ToString("N2")</span></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

