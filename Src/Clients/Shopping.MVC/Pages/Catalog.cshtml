@page "{handler?}"
@model Shopping.MVC.Pages.CatalogModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Catalog";
}

<h1>Catalog</h1>

<div>
    <table class="table">
        <thead>
            <tr class="table-secondary">
                <th>
                    Name
                </th>
                <th>
                    Category
                </th>
                <th>
                    Summary
                </th>
                <th>
                    Description
                </th>
                <th>
                    ImageFile
                </th>
                <th>
                    Price
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    @* column for buttons *@
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CatalogItems)
            {
                <form class="form" method="post" asp-page-handler="addItemToBasket">
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Category
                        </td>
                        <td>
                            @item.Summary
                        </td>
                        <td>
                            @item.Description
                        </td>
                        <td>
                            @item.ImageFile
                        </td>
                        <td>
                            @item.Price
                        </td>
                        <td>
                            <div class="row">
                                <label>QUANTITY:</label>
                                <select name="ItemQuantity" class="">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                </select>
                            </div>
                        </td>
                        <td>
                            <input type="hidden" name="itemId" value="@item.Id" />
                            <button type="submit" class="btn btn-primary ml-4">ADD TO BASKET</button>
                        </td>
                    </tr>
                </form>
            }
        </tbody>
    </table>
</div>
