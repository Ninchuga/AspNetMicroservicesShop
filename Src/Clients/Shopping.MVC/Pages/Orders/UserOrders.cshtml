@page
@model Shopping.MVC.Pages.Orders.UserOrdersModel
@{
    ViewData["Title"] = "User orders";
}

<h2>Your orders</h2>
<h4>Here is an overview of your orders.</h4>

<table class="table">
    <thead>
        <tr class="columnHeader">
            <th>FIRST NAME</th>
            <th>LAST NAME</th>
            <th>ADDRESS</th>
            <th>ORDER PLACED</th>
            <th>TOTAL</th>
            <th>PAID?</th>
            <th>EMAIL</th>
            <th>CARD NUMBER</th>
            <th>STATUS</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.FirstName</td>
                <td>@order.LastName</td>
                <td class="bold">@order.Address</td>
                <td>@order.OrderPlaced.ToShortDateString()</td>
                <td class="bold">$@order.TotalPrice</td>
                <td class="bold">@order.OrderPaid</td>
                <td class="bold">@order.Email</td>
                <td class="bold">@order.CardNumber</td>
                <td class="bold">@order.OrderStatusToDisplay(order.OrderStatus)</td>
            </tr>
        }
    </tbody>
</table>